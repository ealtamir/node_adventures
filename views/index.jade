extends sectioned_layout

block main_section
  h1 Node Adventures
  form(method='GET', action=locals.reverse('index'))
    label(for='main_sfield') Busca un profesor
    input.search_field(type='text', name='q', id='main_sfield')
    input.search_button(type='submit', value='search')

  h1 Ingresa
  form(method='POST', action=locals.reverse('auth'))
    label(for='login-un') Nombre de Usuario
    input.login-un(type='text', name='login_usr', id='login-un', value=query.l_un || '')

    label(for='login-pw') Contraseña
    input.login-pw(type='password', name='login_psw', id='login-pw')

    label.register-tag(for='login-email')
    input.login-email(type='email', name='login_email', id='login-email')

    input.login-button(type='submit', value='ingresar')


  h1 Regístrate
  form(method='POST', action=locals.reverse('register'))
    label(for='register-un') Elige un Nombre de Usuario
    input.register-un(type='text', name='register_usr', id='register-un', value=query.r_un || '')

    label(for='register-pw') Elige una Contraseña
    input.register-pw(type='password', name='register_psw', id='register-pw')

    label.register-tag(for='register-email')
    input.register-email(type='email', name='register-email', id='register-email')

    input.login-button(type='submit', value='registrarse')
  p= query.q || ''
