extends sectioned_layout

include common/search_bar

block prepend main_section
  if state.flash
    #flash_msg(class=state.flash.status || '')
      p= state.flash.msg

  section.content-section#first-section
    div.section-content.pure-g-r
        div.left-content.pure-u-1-2
          h1.f_huge Calificá a un profesor
          h2.f_big Calificá a tus profesores y conocé la opinión de tus compañeros.
          mixin search_bar

          h1.f_huge Ingresa
          form(method='POST', action=locals.reverse('auth'))
            label.input_label(for='login-un') Nombre de Usuario
            input.login-un(type='email', name='login_usr', id='login-un', value=state.l_un || '')

            label.input_label(for='login-pw') Contraseña
            input.login-pw(type='password', name='login_psw', id='login-pw')

            label.register-tag(for='login_email') Ingresa tu email
            input.login-e(type='email', name='login_email', id='login-email')

            input.login-button(type='submit', value='ingresar')

          h1 Regístrate
          form(method='POST', action=locals.reverse('register'))
            label.input_label(for='register-un') Elige un Nombre de Usuario
            input.register-un(type='email', name='register_usr', id='register-un', value=state.r_un || '')

            label.input_label(for='register-pw') Elige una Contraseña
            input.register-pw(type='password', name='register_psw', id='register-pw')

            label.register-tag(for='register_email') Ingresa tu email
            input.register-e(type='email', name='register_email', id='register-email')

            input.login-button(type='submit', value='registrarse')
        div.right-content.pure-u-1-2
          p Stuff that goes on the right.


block append js_scripts
  script(src='javascripts/index.js')
