extends sectioned_layout

include common/search_bar
include common/auth_forms

block header
  div#bar_search_zone.pure-u-1.center
    mixin search_bar('bar_sfield', 'bar_sbutton', '')

block prepend main_section
  section.content-section#first-section
    div.section-content.pure-g-r
      div.pure-u-1#professor_content
        div#professor_profile.pure-u-1
          div.pure-u-2-9
            div.pure-u-1
              img.professor_img.pull-right(src="/img/default_prof_img.png", alt="prof_img")
            //div.pure-u-1.professor_social
              div.pure-u-1
                mixin facebook()
              div.pure-u-1
                mixin twitter()
              div.pure-u-1
                mixin linkedin()
          div.pure-u-7-9
            div.pure-u-3-5
              h1#prof_name.f_x4=rows[0].name + ' ' + rows[0].last_name
              h2.secondary.f_x1=rows[0].u_name + ' - (' + rows[0].u_code + ')'
              h3.secondary.f_x1=rows[0].d_name
            div#total_score_zone.pure-u-2-5
              div.pure-u-1.center
                p.f_x2 Calificación General:
              div.pure-u-1
                  div#total_score(data-score="2.9")
            div.pure-u-1
              div.pure-u-1-2
                div.pure-u-5-11
                  p.f_x2.pull-right(data-tip="Para una clase didáctica donde se fomente la participación de los alumnos y se trate la aplicabilidad del tema.") Dinámica
                div.pure-u-6-11
                  div#score_dinamica(data-score=rows[0].dinamica)
                div.pure-u-5-11
                  p.f_x2.pull-right(data-tip="Del profesor respecto a la materia.") Conocimientos
                div.pure-u-6-11
                  div#score_conocimientos(data-score=rows[0].conocimientos)
                div.pure-u-5-11
                  p.f_x2.pull-right(data-tip="Para transmitir los conocimientos.") Claridad
                div.pure-u-6-11
                  div#score_claridad(data-score=rows[0].claridad)
              div.pure-u-1-2
                div.pure-u-3-11
                  p.f_x2.pull-right(data-tip="Por la clase y la materia.") Pasión
                div.pure-u-6-11
                  div#score_pasion(data-score=rows[0].pasion)
                div.pure-u-3-11
                  p.f_x2.pull-right(data-tip="Con los alumnos para que aprendan.") Compromiso
                div.pure-u-6-11
                  div#score_compromiso(data-score=rows[0].compromiso)
                div.pure-u-3-11
                  p.f_x2.pull-right(data-tip="En el volumen de trabajos prácticos y dificultad de exámenes.") Exigencia
                div.pure-u-6-11
                  div#score_exigencia(data-score=rows[0].exigencia)
        div.pure-u-1.bottom_border.center
          button#calificar_button.f_x5.primary_c
            i.icon.ion-compose  Calificar

        div#review_form.pure-u-1.hide
          div.pure-u-1
            div.pure-offset-1-11.pure-u-3-11
              div.pure-u-1
                div.pure-u-4-11
                  p.f_x1.pull-right Dinámica
                div.pure-u-6-11
                  div#star_dinamica
              div.pure-u-1
                div.pure-u-4-11
                  p.f_x1.pull-right Conocimientos
                div.pure-u-6-11
                  div#star_conocimientos
              div.pure-u-1
                div.pure-u-4-11
                  p.f_x1.pull-right Claridad
                div.pure-u-6-11
                  div#star_claridad
              div.pure-u-1
                div.pure-u-4-11
                  p.f_x1.pull-right Pasion
                div.pure-u-6-11
                  div#star_pasion
              div.pure-u-1
                div.pure-u-4-11
                  p.f_x1.pull-right Compromiso
                div.pure-u-6-11
                  div#star_compromiso
              div.pure-u-1
                div.pure-u-4-11
                  p.f_x1.pull-right Exigencia
                div.pure-u-6-11
                  div#star_exigencia
            div.pure-u-7-11
              div.pure-u-1
                label.f_x1.input_label(for='review_comment') ¿Qué opinás de este profesor?
              div#comment_form.pure-u-1
                div.pure-u-1
                  textarea#review_comment(name='review_comment', cols='71', rows='8', value='')
                div.pure-u-1
                  span.comment_counter.secondary.f_x1 Some random text that i use for testing purposes.
              div.pure-u-1
                label.f_x1.input_label(for='review_advice') ¿Qué le recomendarías a alguien que va a ser alumno de este profesor?
              div#advice_form.pure-u-1
                div.pure-u-1
                  textarea#review_advice(name='review_advice', cols='71', rows='5', value='')
                div.pure-u-1
                  span.advice_counter.secondary.f_x1 Some random text that i use for testing purposes.
          div.pure-u-1.center
            button#commit_review.f_x4.confirm_c
              i.icon.ion-paper-airplane    Enviar Calificación
            a#cancel_review.f_x1 Cancelar

        div#auth_form.pure-u-1.bottom_border.hide
          div.pure-offset-1-11.pure-u-9-11
            div#auth_reg_form.pure-u-3-5
              h1 Regístrate
              mixin auth_form('auth_reg_username', 'auth_reg_password', 'auth_reg_submit')
            div#auth_log_form.pure-u-2-5.left_border
              h1 Ingresa
              mixin auth_form('auth_log_username', 'auth_log_passowrd', 'auth_log_submit')

        div#professor_reviews.pure-u-1
          div#waiting_msg.pure-u-1.bottom_border.hide
            h1.center Cargando comentarios. Por favor espera.


          div#reviews.pure-u-1
            div#no_reviews_msg.pure-u-1.bottom_border.hide
              h1.center Nadie calificó a este profesor todavía. Sé el primero
              h2.center Calificar

            div#reviews_found.pure-u-1.hide
              //div.pure-u-1.review
                div.pure-u-1
                  div.pure-u-2-9
                    div.pure-u-1.center
                      p Calificación Promedio
                    div.pure-u-1.center
                      p.f_x_huge 8.3
                  div.pure-u-7-9
                    div.pure-u-8-9
                      p Acá va un comentario...
                div.pure-u-1
                  div.pure-u-1-2
                    p 50 up - 50 down. ¿Te pareció útil este comentario? <span class="yes_vote">Si</span> o <span class="no_vote">No</span>
                  div.pure-u-1-2
                    p 13 de Agosto del XXXX

block append js_scripts
  include common/_templates
