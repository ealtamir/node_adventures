extends sectioned_layout

include common/search_bar
include common/auth_forms

block header
  mixin search_bar()

block prepend main_section
  section.content-section#first-section
    div.section-content.pure-g-r
      div.pure-u-1#professor_content
        div#professor_profile.pure-u-1.bottom_border
          div.pure-u-2-9
            div.pure-u-1
              img.professor_img.pull-right(src="/img/default_prof_img.jpg", alt="prof_img")
            div.pure-u-1.professor_social.pull-right
                p Facebook Twitter Linkedin
          div.pure-u-7-9
            div.pure-u-3-5
              h1.f_x_huge= rows[0].name + ' ' + rows[0].last_name
              h2=rows[0].u_name + ' - (' + rows[0].u_code + ')'
              h3=rows[0].d_name
            div.pure-u-2-5
              div.pure-u-1
                p Calificación general
              div.pure-u-1
                  div#total_score(data-score="2.9")
            div.pure-u-1
              div.pure-u-1-2
                div.pure-u-3-11
                  p.pull-right Dinamica
                div.pure-offset-1-12.pure-u-7-11
                  div#score_dinamica(data-score=rows[0].dinamica)
                div.pure-u-3-11
                  p.pull-right Conocimientos
                div.pure-offset-1-12.pure-u-7-11
                  div#score_conocimientos(data-score=rows[0].conocimientos)
                div.pure-u-3-11
                  p.pull-right Claridad
                div.pure-offset-1-12.pure-u-7-11
                  div#score_claridad(data-score=rows[0].claridad)
              div.pure-u-1-2
                div.pure-u-3-11
                  p.pull-right Pasión
                div.pure-offset-1-12.pure-u-7-11
                  div#score_pasion(data-score=rows[0].pasion)
                div.pure-u-3-11
                  p.pull-right Compromiso
                div.pure-offset-1-12.pure-u-7-11
                  div#score_compromiso(data-score=rows[0].compromiso)
                div.pure-u-3-11
                  p.pull-right Exigencia
                div.pure-offset-1-12.pure-u-7-11
                  div#score_exigencia(data-score=rows[0].exigencia)
          div.pure-u-1
            div.pure-offset-5-11.pure-u-5-11
              a#calificar_button.button.b_large.pull-right Calificar

        div#review_form.pure-u-1.bottom_border.hide
          div.pure-u-1
            div.pure-offset-1-11.pure-u-3-11
              div.pure-u-1
                div.pure-u-2-11
                  p.pull-right Dinámica
                div.pure-offset-1-12.pure-u-6-11
                  div#star_dinamica
              div.pure-u-1
                div.pure-u-2-11
                  p.pull-right Conocimientos
                div.pure-offset-1-12.pure-u-6-11
                  div#star_conocimientos
              div.pure-u-1
                div.pure-u-2-11
                  p.pull-right Claridad
                div.pure-offset-1-12.pure-u-6-11
                  div#star_claridad
              div.pure-u-1
                div.pure-u-2-11
                  p.pull-right Pasion
                div.pure-offset-1-12.pure-u-6-11
                  div#star_pasion
              div.pure-u-1
                div.pure-u-2-11
                  p.pull-right Compromiso
                div.pure-offset-1-12.pure-u-6-11
                  div#star_compromiso
              div.pure-u-1
                div.pure-u-2-11
                  p.pull-right Exigencia
                div.pure-offset-1-12.pure-u-6-11
                  div#star_exigencia
            div.pure-u-7-11
              div.pure-u-1
                label.input_label(for='review_comment') ¿Qué opinás de este profesor?
              div.pure-u-1
                textarea#review_comment(name='review_comment', cols='71', rows='8', value='')
              div.pure-u-1
                label.input_label(for='review_advice') ¿Qué le recomendarías a alguien que va a ser alumno de este profesor?
              div.pure-u-1
                textarea#review_advice(name='review_advice', cols='71', rows='5', value='')
          div.pure-u-1
            div.pure-offset-5-11.pure-u-5-11
              a#commit_review.button.b_large.pull-right Enviar Calificación
              a#cancel_review.pull-right Cancelar

        div#auth_form.pure-u-1.bottom_border.hide
          div.pure-offset-1-11.pure-u-9-11
            div#auth_reg_form.pure-u-3-5
              h1.f_huge Regístrate
              mixin auth_form('auth_reg_username', 'auth_reg_password', 'auth_reg_submit')
            div#auth_log_form.pure-u-2-5.left_border
              h1.f_huge Ingresa
              mixin auth_form('auth_log_username', 'auth_log_passowrd', 'auth_log_submit')

        div#professor_reviews.pure-u-1
          div#waiting_msg.pure-u-1.bottom_border.hide
            h1.f_x_large.center Cargando comentarios. Por favor espera.


          div#reviews.pure-u-1
            div#no_reviews_msg.pure-u-1.bottom_border.hide
              h1.f_x_large.center Nadie calificó a este profesor todavía. Sé el primero
              h2.f_x_huge.center Calificar

            div#reviews_found.pure-offset-1-12.pure-u-10-12.hide
              //div.pure-u-1.review
                div.pure-u-1
                  div.pure-u-2-9
                    div.pure-u-1.center
                      p Calificación Promedio
                    div.pure-u-1.center
                      p.f_x_huge 8.3
                  div.pure-u-7-9
                    div.pure-u-8-9
                      p Acá va un comentario...
                div.pure-u-1
                  div.pure-u-1-2
                    p 50 up - 50 down. ¿Te pareció útil este comentario? <span class="yes_vote">Si</span> o <span class="no_vote">No</span>
                  div.pure-u-1-2
                    p 13 de Agosto del XXXX

block append js_scripts
  include common/_templates
